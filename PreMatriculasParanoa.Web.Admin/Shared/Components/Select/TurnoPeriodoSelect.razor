@namespace PreMatriculasParanoa.Web.Admin.Shared.Components.Select

@using PreMatriculasParanoa.Domain.Models.Enumerations

<MudSelect T="string"
           Value="@Value"
           Label="@Label"
           ValueChanged="@OnValueChanged"
           Variant="@Variant"
           Margin="@(Dense ? Margin.Dense : Margin.Normal)"
           Dense="@Dense"
           Clearable="false">
    @{
        foreach (var item in Enum.GetValues<EnumTurnoPeriodo>())
        {
            <MudSelectItem Value="@item.EnumDescription()">@item.EnumDescription()</MudSelectItem>
        }
    }
</MudSelect>

@code {
    [Parameter] public string Value { get; set; }
    [Parameter] public string Label { get; set; }
    [Parameter] public Variant Variant { get; set; } = Variant.Outlined;
    [Parameter] public bool Dense { get; set; } = false;
    [Parameter] public EventCallback<string> ValueChanged { get; set; }

    private void OnValueChanged(string value)
    {
        ValueChanged.InvokeAsync(value);
    }
}
