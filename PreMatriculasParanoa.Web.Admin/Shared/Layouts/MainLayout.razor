@inherits LayoutComponentBase

@inject StateContainer State

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText>&nbsp;&nbsp; @State.TituloPagina</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/rafaelramosdf/PreMatriculasParanoa" Target="_blank" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" Variant="@DrawerVariant.Responsive" Breakpoint="@Breakpoint.Lg">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">SGPM PARANOÁ</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent MaxWidth="MaxWidth.False" Class="mt-4 px-3">
        @Body
    </MudMainContent>

    <MudItem Style="height: 150px;"></MudItem>

</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}